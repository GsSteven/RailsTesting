
<table class="table table-striped table-bordered mt-5">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <%if friend.user == current_user%>
        <tr>
          <td><%= link_to "#{friend.first_name} #{friend.last_name}", friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to image_tag("deleteIcon.png"), friend, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete #{friend.first_name} #{friend.last_name}" %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Add Friend', new_friend_path, class: "btn btn-outline-success btn-sm" %>
