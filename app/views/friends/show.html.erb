<div class="bg-light border border-dark rounded p-2 my-2">
  <h1 class="text-capitalize">
    <%= @friend.first_name %> <%= @friend.last_name %>
  </h1>

  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>
</div>

<%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-outline-success btn-sm" %> 
<%= link_to 'Back', friends_path, class: "btn btn-outline-danger btn-sm"%>
